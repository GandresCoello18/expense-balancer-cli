{
  "name": "tinkin",
  "version": "1.0.0",
  "description": "Back-end technical testing",
  "main": "index.js",
  "packageManager": "yarn@1.22.22",
  "engines": {
    "yarn": ">=1.22",
    "node": ">=20.19.0"
  },
  "scripts": {
    "clean:modules": "rm -rf ./node_modules",
    "clean": "rm -rf ./dist",
    "prepare:husky": "husky install",
    "prebuild": "yarn clean",
    "build": "tsc",
    "start": "yarn clean && yarn build && yarn copy-assets && node dist/index.js",
    "start:file:example": "yarn start dist/inputs/example.txt",
    "copy-assets": "copyfiles -f -u 1 \"src/inputs/**/*\" dist/inputs",
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "dev:file:example": "yarn dev src/inputs/example.txt",
    "format:fix": "prettier --write \"src/**/*.ts\" --write \"package.json\"",
    "format:check": "prettier --check \"src/**/*.ts\" --check \"package.json\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:unit": "jest src/__tests__ --detectOpenHandles",
    "test:watch": "yarn test:unit --watch",
    "test:coverage": "yarn test:unit --coverage",
    "test:dependecy": "snyk test"
  },
  "keywords": [
    "number",
    "script",
    "server",
    "calculator"
  ],
  "author": "Andres coello goyes",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/parser": "^8.28.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "snyk": "^1.1296.1",
    "ts-jest": "^29.3.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "console-log-colors": "^0.5.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint"
    ]
  }
}
